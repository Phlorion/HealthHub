<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- THIS SCROLL VIEW WILL HAVE ALL THE BUTTONS -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp"
            android:justifyContent="space-between">

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/greeting_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HELLO @{USERNAME}
                            \n What do you want to do? "
                android:textSize="18sp"
                android:textColor="@color/black" />
        </LinearLayout>


<!--  SET PERSONAL INFO BUTTON   -->
        <FrameLayout
            android:id="@+id/set_Personal_Info"
            android:layout_width="380dp"
            android:layout_height="130dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp">

            <ImageButton
                android:id="@+id/set_Personal_Info_btn"
                android:layout_width="380dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@drawable/personal_info"
                android:text="@string/set_Personal_Info_btn"
                android:backgroundTint="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_Personal_Info_btn"
                android:textSize="25sp"
                android:tint="@color/black"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />

        </FrameLayout>


<!--  SET FAVORITE CONTACTS BUTTON   -->
    <FrameLayout
        android:id="@+id/set_Favorite_Contacts"
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:layout_marginBottom="25dp">

        <ImageButton
            android:id="@+id/set_Fav_Contacts_btn"
            android:layout_width="380dp"
            android:layout_height="130dp"
            app:layout_constraintVertical_bias="0.93"
            android:src="@drawable/family"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/white"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_Favorite_Contacts_btn"
            android:textSize="25sp"
            android:tint="@color/black"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

    </FrameLayout>

<!--  SET MEDICATION BUTTON  -->
    <FrameLayout
        android:id="@+id/set_Medication"
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:layout_marginBottom="25dp"
        >

        <ImageButton
            android:id="@+id/set_Medication_btn"
            android:layout_width="380dp"
            android:layout_height="130dp"
            app:layout_constraintVertical_bias="0.669"
            android:src="@drawable/medicine"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_Medication_btn"
            android:textSize="25sp"
            android:tint="@color/black"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

    </FrameLayout>

<!--SET HOME BUTTON -->
    <FrameLayout
        android:id="@+id/set_Home"
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:layout_marginBottom="25dp">

        <ImageButton
            android:id="@+id/set_Home_btn"
            android:layout_width="380dp"
            android:layout_height="130dp"
            app:layout_constraintVertical_bias="0.412"
            android:src="@drawable/home"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_Home_btn"
            android:textSize="25sp"
            android:tint="@color/black"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

    </FrameLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>