<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/health_facilities_rv_row_img1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrows_maximize_svgrepo" />

            <TextView
                android:id="@+id/health_facilities_rv_row_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/inter_medium"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/health_facilities_rv_row_img1"
                app:layout_constraintTop_toTopOf="@id/health_facilities_rv_row_img1" />

            <TextView
                android:id="@+id/health_facilities_rv_row_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/inter_medium"
                android:text="address"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/health_facilities_rv_row_img1"
                app:layout_constraintStart_toEndOf="@id/health_facilities_rv_row_img1"
                app:layout_constraintTop_toBottomOf="@id/health_facilities_rv_row_tv1" />

            <TextView
                android:id="@+id/health_facilities_rv_row_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="distance"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/health_facilities_rv_row_img1"
                app:layout_constraintEnd_toStartOf="@id/health_facilities_rv_row_btn1"
                app:layout_constraintTop_toTopOf="@+id/health_facilities_rv_row_img1"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="24dp"/>

            <Button
                android:id="@+id/health_facilities_rv_row_btn1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_arrow_back_green"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="12dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>