<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/health_facilities_rv_row_card1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/health_facilities_rv_row_constraint1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/health_facilites_rv_row">

            <ImageView
                android:id="@+id/health_facilities_rv_row_img1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrows_maximize_svgrepo"
                android:tint="@color/app_main"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/health_facilities_rv_row_tv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/inter_medium"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:flow_wrapMode="aligned"
                app:layout_constraintEnd_toStartOf="@+id/health_facilities_rv_row_tv3"
                app:layout_constraintStart_toEndOf="@+id/health_facilities_rv_row_img1"
                app:layout_constraintTop_toTopOf="@id/health_facilities_rv_row_img1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="18dp"/>

            <TextView
                android:id="@+id/health_facilities_rv_row_tv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/inter_medium"
                android:text="address"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/health_facilities_rv_row_img1"
                app:layout_constraintEnd_toStartOf="@+id/health_facilities_rv_row_tv3"
                app:layout_constraintStart_toEndOf="@+id/health_facilities_rv_row_img1"
                app:layout_constraintTop_toBottomOf="@id/health_facilities_rv_row_tv1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="18dp"/>

            <TextView
                android:id="@+id/health_facilities_rv_row_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="distance"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/health_facilities_rv_row_img1"
                app:layout_constraintEnd_toStartOf="@id/health_facilities_rv_row_btn1"
                app:layout_constraintTop_toTopOf="@+id/health_facilities_rv_row_img1"
                android:layout_marginEnd="18dp" />

            <Button
                android:id="@+id/health_facilities_rv_row_btn1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_arrow_back_green"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="12dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>